@model DenuncieSpam.Models.Reclamacao

@{
    ViewData["Title"] = "Atualizar incidente";
}

<div class="border border-light rounded shadow col-md-8">
    <div class="container">
        <h3 class="titulo"><i class="fas fa-user-lock fa-lg"></i> Atualizar Incidente </h3>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="IdReclamacao" />

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Data" class="control-label">Data</label>
                            <input asp-for="Data" class="form-control form-control-lg" />
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" class="form-control form-control-lg telefone" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Descricao" class="control-label">Descricao</label>
                            <textarea asp-for="Descricao" class="form-control form-control-lg"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Latitude" class="control-label"></label>
                            <input asp-for="Latitude" class="form-control form-control-lg telefone" />
                            <span asp-validation-for="Latitude" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Longitude" class="control-label"></label>
                            <input asp-for="Longitude" class="form-control form-control-lg telefone" />
                            <span asp-validation-for="Longitude" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Endereco" class="control-label"></label>
                            <input asp-for="Endereco" class="form-control form-control-lg telefone" />
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group botoes">
                        <input type="submit" value="Atualizar" class="btn btn-outline-info btn-lg" /> &nbsp;
                        <a asp-action="Index" class="btn btn-link btn-lg">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>

    <script>
        $(function () {
            $(".telefone").mask("(99) 9 9999-9999");
        })
    </script>
}
